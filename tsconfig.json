{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",

    /* Add this to allow .tsx extensions in imports */
    "allowImportingTsExtensions": true,

    /* When using allowImportingTsExtensions, noEmit must be true */
    "noEmit": true,

    /* Other options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
